@using EntityLayer.Concrete
@model List<Kategori>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th> ID </th>
        <th> Kategori Adı </th>
        <th> Durumu </th>
        <th> Detaylar </th>
        <th> Sil </th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td> @c.KategoriID </td>
            <td> @c.KategoriAd </td>
            <td> @c.KategoriDurum </td>
            <td><a href="#" class="btn btn-info"> Detaylar </a></td>
            <td> <a href="#" class="btn btn-danger"> Sil </a></td>
        </tr>
    }
</table>
