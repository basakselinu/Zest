@using EntityLayer.Concrete
@model List<Bildirim>
@{
    ViewData["Title"] = "TumBildirimler";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}

<h1>Bildirimler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Bildirim</th>   
        <th>Tarih</th>   
    </tr>
    @foreach(var c in Model)
            {
        <tr>
            <td>@c.BildirimID</td>
            <td>@c.BildirimDetay</td>
            <td>@c.BildirimTarih.ToShortDateString()</td>
        </tr>
            }
</table>

