@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h4>Diğer Eklediği Yemekler</h4>

    @foreach (var c in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="single.html">
                    <img src="@c.BlogResim" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="single.html">@c.BlogBaslik </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)c.BlogTarih).ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>
       }
</div>