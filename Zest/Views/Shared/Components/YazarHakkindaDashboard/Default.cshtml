@using EntityLayer.Concrete
@model List<Yazar>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>

                <h1>Selam @ViewBag.veri</h1>

                <div class="d-flex mt-5 align-items-top">
                    @foreach (var c in Model)
                    {
                        <img src="@c.YazarResim" class="img-sm rounded-circle mr-3" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@c.YazarAd - @c.YazarMail .</h5>
                            <p class="mb-0 font-weight-light">@c.YazarBilgi</p>
                        </div>
                    }
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>