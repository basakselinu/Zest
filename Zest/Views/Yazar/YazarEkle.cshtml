@model Zest.Models.ProfilResmiEkle
@{
    ViewData["Title"] = "YazarEkle";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Yazar Ekle</h4>
                <br />
                @Html.HiddenFor(x => x.YazarID, new { @class = "form-control" })
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        @Html.TextBoxFor(x => x.YazarAd, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.YazarAd)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresİ</label>
                        @Html.TextBoxFor(x => x.YazarMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.YazarMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="YazarSifre" name="pass1" placeholder="Password">
                        @Html.ValidationMessageFor(x => x.YazarSifre)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifreyi Doğrulayın</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="YazarSifre" name="pass2" placeholder="Password">
                        <p>@ViewBag.hata</p>
                    </div>
                    <div class="form-group">
                        <label>Profil Resmi</label>
                        <br />
                        <input type="file" name="YazarResim" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında</label>
                        @Html.TextAreaFor(x => x.YazarBilgi, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>

