@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogGuncelle";
    Layout = "~/Views/Shared/YazarLayout.cshtml";
}

<h1>Düzenleme Sayfası</h1>
@using (Html.BeginForm("BlogGuncelle", "Blog", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogBaslik, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Tarif Kapak Görseli")
    @Html.TextBoxFor(x => x.BlogKapakResim, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.BlogResim, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.deg, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.Blogİcerik, 10, 3, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
}


