@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/TemaLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yemekler</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach(var c in Model)
            {
                    <div class="col-lg-4 card">
                        <a href="single.html">
                            <img src="@c.BlogResim" class="card-img-top img-fluid" alt="">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @(((DateTime)c.BlogTarih).ToString("dd-MMM-yyyy"))
                                    </a>
                                </li>
                                <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-comment"></i> @c.Kategori.KategoriAd
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye"></i> @c.KategoriID
                                    </a>
                                </li>

                            </ul>
                            <h5 class="card-title">
                                <a href="/Blog/BlogHepsiniOku/@c.BlogID">@c.BlogBaslik</a>
                            </h5>
                            <p class="card-text mb-3">@c.Blogİcerik.Substring(0,20)</p>
                            
                            <a href="/Blog/BlogHepsiniOku/@c.BlogID" class="btn btn-primary read-m">Devamını Oku</a>
                        </div>
                    </div>
                    <br />
                    }
                   
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>

