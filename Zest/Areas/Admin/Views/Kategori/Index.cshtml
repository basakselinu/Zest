@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Kategori>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yapı</th>
        <th>Aktif Yapı</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <th>@c.KategoriID</th>
            <td>@c.KategoriAd</td>
            <td><a href="/Admin/Kategori/KategoriSil/@c.KategoriID/" id="DeleteBtn" 
                   onclick="return confirm('Silmek istediğinize emin misiniz')" class="btn btn-primary">Pasif Yap</a></td>

            <td><a href="#" class="btn btn-info">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
